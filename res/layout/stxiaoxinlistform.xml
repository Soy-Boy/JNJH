<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp">
    
     <ImageView
	    android:id="@+id/huodong"
	    android:layout_width="80dp"
	    android:layout_height="80dp"
	    android:layout_marginLeft="20dp"
	    android:contentDescription="@string/app_name"
	    android:src="@drawable/huodong2" />
     <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		    <TextView
		     android:id="@+id/shetuanming"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:text="社团名"
		     android:textColor="#b8860b"
		     android:textSize="@dimen/sp14" />
		    <TextView
		     android:id="@+id/shijian"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:text="11月11日 8:00"
		     android:textColor="#b8860b"
		     android:textSize="@dimen/sp14" />
		</LinearLayout>
		<TextView
	     android:id="@+id/huodongxinxi"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="5dp"
	     android:layout_marginLeft="10dp"
	     android:text="首届全国跆拳道示范团精英赛将于3月3-4日在东莞万江举行。日前，记者从新闻发布会上获悉，这个由国家体育总..."
	     android:textColor="#b8860b"
	     android:textSize="@dimen/sp12" />
	</LinearLayout> 

</LinearLayout>  

</LinearLayout>