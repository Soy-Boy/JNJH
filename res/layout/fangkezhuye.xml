<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/v2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/hong"
        android:text=" " />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fangkezhuye_fanhui"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/touming"
            android:src="@drawable/abc_ic_ab_back_holo_dark" />

    <TextView
        android:id="@+id/fangke_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="个人主页"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:layout_marginBottom="40dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/jibenxinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="基本信息"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <TableRow>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/gerentouxiang1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/one" />

                        <TextView
                            android:id="@+id/fangkezhuye_nicheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/gerentouxiang1"
                            android:text="昵称"
                            android:textColor="#b8860b"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/fangkezhuye_dengji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fangkezhuye_nicheng"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/gerentouxiang1"
                            android:text="等级"
                            android:textColor="#b8860b"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/jibenxinxi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao1"
                    android:text="更多信息"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

                <TextView
                    android:id="@+id/fangkezhuye_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="性别:"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/fangkezhuye_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="年龄："
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/fangkezhuye_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="专业："
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/fangkezhuye_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="电话:"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/fangkezhuye_QQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="QQ:"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/gexingqianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="个性签名"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/fangkezhuye_qianming"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="我喜欢吃，所以我胖。因为我胖，所以我要加强锻炼，努力减肥。"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <Button
                    android:id="@+id/fangkezhuye_faxiaoxi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biankuang"
                    android:text="发消息"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>