<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/v2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/hong"
        android:text=" " />

    <TextView
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="个人主页"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:layout_marginBottom="40dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/jibenxinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="基本信息"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <TableRow>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/gerentouxiang1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/one" />

                        <TextView
                            android:id="@+id/fangkezhuye_nicheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/gerentouxiang1"
                            android:text="昵称"
                            android:textColor="#b8860b"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/fangkezhuye_dengji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fangkezhuye_nicheng"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/gerentouxiang1"
                            android:text="等级"
                            android:textColor="#b8860b"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/fangkezhuye_nicheng"
                            android:background="#ffffff"
                            android:src="@drawable/guanzhu" />
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="#f5f5f5" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/xiangxiziliao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/shu"
                        android:gravity="left|center_vertical"
                        android:text="详细资料  "
                        android:textColor="#b8860b"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/next" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/gexingqianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="个性签名"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/fangkezhuye_qianming"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="我喜欢吃，所以我胖。因为我胖，所以我要加强锻炼，努力减肥。"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/woxiangjiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="我想教"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/jineng4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="跆拳道"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/jineng5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="舞蹈"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/jineng6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="唱歌"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yumao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yumao" />

                <TextView
                    android:id="@+id/woxiangxue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/yumao"
                    android:text="我想学"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/jineng1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="ps"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/jineng2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="高数"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/jineng3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/huangseyuankuang"
                        android:text="羽毛球"
                        android:textColor="#b8860b"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableLayout>

            <TableLayout
                android:id="@+id/table3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang"
                android:collapseColumns="10"
                android:padding="3dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <Button
                    android:id="@+id/faxiaoxi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biankuang"
                    android:text="发消息"
                    android:textColor="#b8860b"
                    android:textSize="15sp" />
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>