<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hong" >

        <TextView
            android:id="@+id/dengluzhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录川大易课"
            android:textColor="@color/bai"
            android:textSize="20sp" />

        <Button
            android:id="@+id/denglu_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_hong"
            android:textSize="20sp"
            android:textColor="@color/bai"
            android:text="注册" />

    </RelativeLayout>

    <EditText
        android:id="@+id/denglu_youxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="输入邮箱" >
    </EditText>
    <EditText
        android:id="@+id/denglu_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:hint="输入密码" >
    </EditText>

    <Button
        android:id="@+id/denglu_denglu"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_hong"
        android:textColor="@color/bai"
        android:text="登录"/>

</LinearLayout>
